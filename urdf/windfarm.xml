  <rosInterfaces>
      
    <ROSOdomToPAT>
      <topic> /camera/state_sp </topic>
      <vehicleName> camera </vehicleName>
    </ROSOdomToPAT>
    <ROSOdomToPAT>
      <topic> /turbine1/state_sp </topic>
      <vehicleName> turbine1 </vehicleName>
    </ROSOdomToPAT>
   <PATToROSOdom>
      <topic> /camera/state </topic>
      <vehicleName> camera </vehicleName>
    </PATToROSOdom>


    
    <ROSJointStateToArm> 
        <topic>/turbine1/joint_states</topic>
        <vehicleName>turbine1</vehicleName>
    </ROSJointStateToArm>

